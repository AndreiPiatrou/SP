                        <StackPanel Orientation="Horizontal">
                            <ToggleButton IsChecked="{Binding IsChecked}" 
                                          Margin="5, 0" 
                                          VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Header}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>